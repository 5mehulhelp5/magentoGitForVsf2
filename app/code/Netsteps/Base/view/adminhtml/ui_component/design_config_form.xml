<!-- This allows html tags on copyright field on the backend. Author: Vasilis Neris-->
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="other_settings" sortOrder="30">
        <fieldset name="footer">
            <settings>
                <level>1</level>
                <collapsible>true</collapsible>
                <label translate="true">Footer</label>
            </settings>
            <field name="footer_copyright" formElement="textarea">
                <settings>
                    <validation>
                        <rule name="validate-no-html-tags" xsi:type="boolean">false</rule>
                    </validation>
                    <dataType>text</dataType>
                    <label translate="true">Copyright</label>
                    <dataScope>footer_copyright</dataScope>
                </settings>
            </field>
        </fieldset>
    </fieldset>
</form>
