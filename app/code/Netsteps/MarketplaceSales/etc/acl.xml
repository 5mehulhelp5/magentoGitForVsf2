<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Netsteps_Marketplace::resource">
                    <resource id="Netsteps_Marketplace::seller_actions">
                        <resource id="Netsteps_MarketplaceSales::order_actions" title="Order Actions" sortOrder="10">
                            <resource id="Netsteps_MarketplaceSales::order_approve" title="Approve Order" sortOrder="10"/>
                            <resource id="Netsteps_MarketplaceSales::order_decline" title="Decline Order" sortOrder="20"/>
                            <resource id="Netsteps_MarketplaceSales::order_ship" title="Ship Order" sortOrder="30"/>
                            <resource id="Netsteps_MarketplaceSales::order_invoice" title="Invoice Order" sortOrder="40"/>
                            <resource id="Netsteps_MarketplaceSales::order_view" title="View Order" sortOrder="50"/>
                            <resource id="Netsteps_MarketplaceSales::order_refund" title="Refund Order" sortOrder="60"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
