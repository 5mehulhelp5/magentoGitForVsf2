<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:Ui/etc/ui_configuration.xsd">
    <fieldset name="general">
        <field name="custom_category_note">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Category Number Notes</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">190</item>
                    <item name="scopeLabel" xsi:type="string">[STORE VIEW]</item>
                </item>
            </argument>
        </field>

        <field name="category_number_minimal">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <!-- Label in Admin -->
                    <item name="label" xsi:type="string" translate="true">Category Number Minimal</item>
                    <!-- UI Component type -->
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataType" xsi:type="string">number</item>
                    <!-- Validation: allow only numeric values -->
                    <item name="validation" xsi:type="array">
                        <item name="validate-number" xsi:type="boolean">true</item>
                    </item>
                    <!-- Other options -->
                    <item name="sortOrder" xsi:type="number">120</item>
                    <item name="scopeLabel" xsi:type="string">[STORE VIEW]</item>
                    <item name="dataScope" xsi:type="string">category_number_minimal</item>
                </item>
            </argument>
        </field>

        <field name="category_number_maximum">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <!-- Label in Admin -->
                    <item name="label" xsi:type="string" translate="true">Category Number Maximum</item>
                    <!-- UI Component type -->
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataType" xsi:type="string">number</item>
                    <!-- Validation: allow only numeric values -->
                    <item name="validation" xsi:type="array">
                        <item name="validate-number" xsi:type="boolean">true</item>
                    </item>
                    <!-- Other options -->
                    <item name="sortOrder" xsi:type="number">130</item>
                    <item name="scopeLabel" xsi:type="string">[STORE VIEW]</item>
                    <item name="dataScope" xsi:type="string">category_number_maximum</item>
                </item>
            </argument>
        </field>

    </fieldset>
</form>
